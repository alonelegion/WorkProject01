<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".WorkOrdersActivity"
        android:background="@drawable/main_background">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:stretchColumns="0.1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/textlines"
                            android:padding="15dp"
                            android:text="Индекс" />

                        <TextView
                            android:id="@+id/nz_id_work"
                            android:layout_weight="10"
                            android:layout_height="match_parent"
                            android:background="@drawable/textlines"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:text="Help"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:background="@drawable/textlines"
                            android:text="Дата" />

                        <TextView
                            android:id="@+id/data_work"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_width="wrap_content"
                            android:background="@drawable/textlines"
                            android:gravity="center"
                            android:layout_weight="10"
                            android:text="Help" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:background="@drawable/textlines"
                            android:text="Время начала"/>

                        <TextView
                            android:id="@+id/t_begin_work"
                            android:background="@drawable/textlines"
                            android:text="Help"
                            android:layout_weight="8"
                            android:layout_width="wrap_content"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="Как (how)" />

                        <TextView
                            android:id="@+id/how_work"
                            android:background="@drawable/textlines"
                            android:layout_width="wrap_content"
                            android:layout_weight="10"
                            android:text="Help"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="Филиал" />

                        <TextView
                            android:id="@+id/filial_work"
                            android:background="@drawable/textlines"
                            android:layout_width="wrap_content"
                            android:layout_weight="10"
                            android:text="Help"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:background="@drawable/textlines"
                            android:text="Город" />

                        <TextView
                            android:id="@+id/city_work"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_weight="10"
                            android:background="@drawable/textlines"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:text="Help" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:background="@drawable/textlines"
                            android:text="Улица" />

                        <TextView
                            android:id="@+id/street_work"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/textlines"
                            android:gravity="center"
                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:text="Help" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="ФИО" />

                        <TextView
                            android:id="@+id/fio_work"
                            android:background="@drawable/textlines"
                            android:text="Help"
                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="Тип NZ" />

                        <TextView
                            android:id="@+id/tip_nz_work"
                            android:background="@drawable/textlines"
                            android:text="Help"
                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="Статус" />

                        <TextView
                            android:id="@+id/stat_work"
                            android:background="@drawable/textlines"
                            android:text="Help"
                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:gravity="center"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textlines"
                            android:text="nz_id_part" />

                        <TextView
                            android:id="@+id/nz_id_part_work"
                            android:background="@drawable/textlines"
                            android:text="Help"
                            android:layout_weight="10"
                            android:layout_width="wrap_content"
                            android:gravity="center"/>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>